[core]
  editor = vim
  pager = delta
[interactive]
  diffFilter = delta --color-only
[http]
  sslbackend = gnutls
[alias]
  logg = log --oneline --all --decorate --graph
[delta]
  navigate = true    # use n and N to move between diff sections
  line-numbers = true
# delta detects terminal colors automatically; set one of these to disable auto-detection
# dark = true
# light = true
[merge]
  conflictstyle = diff3
[diff]
  colorMoved = default
